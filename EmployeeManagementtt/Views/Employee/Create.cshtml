@model EmployeeManagementtt.ViewModel.EmployeeViewModel
@{
    ViewData["Title"] = "Create";
}
<body style="background-color:Background;">
    <section class="min-vh-100 gradient-custom" body style="background-color:lightpink">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5" style="text-align:center">Registration Form</h3>
                            <form enctype="multipart/form-data" asp-controller="employee" asp-action="Create" method="post" class="mt-3">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="FirstName">First Name</label>
                                        <div class="form-outline">
                                            <input asp-for="FirstName" class="form-control form-control-lg" placeholder="First Name" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="LastName">Last Name</label>
                                        <div class="form-outline">
                                            <input asp-for="LastName" class="form-control form-control-lg" placeholder="Last Name" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="EMAIL">Email</label>
                                        <div class="form-outline">
                                            <input asp-for="EMAIL" class="form-control form-control-lg" placeholder="Email Address" />
                                            <span asp-validation-for="EMAIL" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="PhoneNo">Contact Number</label>
                                        <div class="form-outline">
                                            <input asp-for="PhoneNo" class="form-control form-control-lg" placeholder="Contact Number" />
                                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="DOB">Date Of Birth</label>
                                        <div class="form-outline">
                                            <input asp-for="DOB" class="form-control form-control-lg" placeholder="Date Of Birth" />
                                            <span asp-validation-for="DOB" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="Gender">Gender</label>
                                        <div class="form-outline">
                                            <select asp-for="Gender" class="form-control form-control-lg"
                                                    asp-items="Html.GetEnumSelectList<enum2>()">
                                                <option value="">Please Select</option>
                                            </select>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="FatherName">Father Name</label>
                                        <div class="form-outline">
                                            <input asp-for="FatherName" class="form-control form-control-lg" placeholder="Father Name" />
                                            <span asp-validation-for="FatherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="MotherName">Mother Name</label>
                                        <div class="form-outline">
                                            <input asp-for="MotherName" class="form-control form-control-lg" placeholder="Mother Name" />
                                            <span asp-validation-for="MotherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="Country">Country</label>
                                        <div class="form-outline">
                                            <input asp-for="Country" class="form-control form-control-lg" placeholder="Country" />
                                            <span asp-validation-for="Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="State">State</label>
                                        <div class="form-outline">
                                            <input asp-for="State" class="form-control form-control-lg" placeholder="State" />
                                            <span asp-validation-for="State" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="City">City</label>
                                        <div class="form-outline">
                                            <input asp-for="City" class="form-control form-control-lg" placeholder="City" />
                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="Address">Address</label>
                                        <div class="form-outline">
                                            <input asp-for="Address" class="form-control form-control-lg" placeholder="Address" />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <label asp-for="DEPARTMENT">Department Name</label>
                                        <div class="form-outline">
                                            <select asp-for="DEPARTMENT" class="form-control form-control-lg"
                                                    asp-items="Html.GetEnumSelectList<dept>()">
                                                <option value="">Please Select</option>
                                            </select>
                                            <span asp-validation-for="DEPARTMENT" class="text-danger"></span>
                                        </div>

                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <label asp-for="PhotoPath">Photo Path</label>
                                        <div class="custom-file">
                                            <div class="custom-file">
                                                <input asp-for="PhotoPath" class="form-control custom-file-input">
                                                <label class="custom-file-label">Choose File...</label>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                                <div class="mt-4 text-center">
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </div>
                                @section Scripts {
                                    <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
                                    </script>
                                }

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>