@model EmployeeManagementtt.Models.Employee

@{
    ViewData["Title"] = "List";
    var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.jpg");
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img src="@photoPath" class="rounded-circle" width="250" asp-append-version="true" ><span class="font-weight-bold">@Model.FirstName @Model.LastName</span><span class="text-black-50">@Model.EMAIL</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">User Profile</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">First Name</label><input type="text" class="form-control" placeholder="First Name" value="@Model.FirstName"></div>
                    <div class="col-md-6"><label class="labels">Last Name</label><input type="text" class="form-control" placeholder="Last Name" value="@Model.LastName"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Gender</label><input type="text" class="form-control" placeholder="Gender" value="@Model.Gender"></div>
                    <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" placeholder="Email" value="@Model.EMAIL"></div>
                    <div class="col-md-12"><label class="labels">Date Of Birth</label><input type="text" class="form-control" placeholder="Date Of Birth" value="@Model.DOB"></div>
                    <div class="col-md-12"><label class="labels">Contact Number</label><input type="text" class="form-control" placeholder="Contact Number" value="@Model.PhoneNo"></div>
                    <div class="col-md-12"><label class="labels">Department Name</label><input type="text" class="form-control" placeholder="Department Name" value="@Model.DEPARTMENT"></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Father Name</label><input type="text" class="form-control" placeholder="Father Name" value="@Model.FatherName"></div>
                    <div class="col-md-6"><label class="labels">Mother Name</label><input type="text" class="form-control" placeholder="Mother Name" value="@Model.MotherName"></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Country</label><input type="text" class="form-control" placeholder="Country" value="@Model.Country"></div>
                    <div class="col-md-6"><label class="labels">State</label><input type="text" class="form-control" placeholder="State" value="@Model.State"></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">City</label><input type="text" class="form-control" placeholder="City" value="@Model.City"></div>
                    <div class="col-md-6"><label class="labels">Address</label><input type="text" class="form-control" placeholder="Address" value="@Model.Address"></div>
                </div>

                <div class="mt-5 text-center">
                    
                    <a asp-action="AllList" asp-controller="Employee" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
            </div>
        </div>
    </div>
</div>
