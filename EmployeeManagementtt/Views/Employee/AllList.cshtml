@model IEnumerable<EmployeeManagementtt.Models.Employee>
@{
    ViewData["Title"] = "AllList";
}
<h1 style="text-align:center">All List</h1>
<div class="row justify-content-center align-items-center h-100">
    <table class="table">

        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Department</th>
                <th scope="col">DOB</th>
                <th scope="col">Phone No</th>
                <th scope="col">Father Name</th>
                <th scope="col">Mother Name</th>
                <th scope="col">Country</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">Address</th>
                <th scope="col">Photo Path</th>
                <th scope="col">View</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
            <tr>
                <td>
                    @p.ID
                </td>
                <td>
                    @p.FirstName
                </td>
                <td>
                    @p.LastName
                </td>
                <td>
                    @p.Gender
                </td>
                <td>
                    @p.EMAIL
                </td>
                <td>
                    @p.DEPARTMENT
                </td>
                <td>
                    @p.DOB
                </td>
                <td>
                    @p.PhoneNo
                </td>
                <td>
                    @p.FatherName
                </td>
                <td>
                    @p.MotherName
                </td>
                <td>
                    @p.Country
                </td>
                <td>
                    @p.State
                </td>
                <td>
                    @p.City
                </td>
                <td>
                    @p.Address
                </td>
                <td>
                    @p.PhotoPath
                </td>

                <td>
                    <a asp-controller="Employee" asp-action="list" asp-route-id="@p.ID">Here</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@p.ID">Here</a>
                </td>
                <td>
                    <form method="post" action="Delete">
                        <input onclick="if (!confirm('Are you sure want to delete this make')){ return false }" type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@p.ID" value="Delete" />
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
